<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:layout_margin="3dp"
    app:cardElevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:text="FREE"

            android:layout_alignParentStart="true"
            android:id="@+id/status"

            android:padding="5dp"
            android:textColor="@color/cardview_light_background"
            />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/owner_name"
              android:text="Ajeet Singh"
              android:padding="5dp"
              android:textStyle="bold"
              android:layout_centerHorizontal="true"
              android:textSize="15dp"


              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="100"
              android:textStyle="bold"
              android:textSize="15dp"
              android:id="@+id/sticker_no"
              android:layout_alignParentEnd="true"
              android:padding="5dp"

              />
        </RelativeLayout>

        <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

            >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:text="Lolipop 5.0"
                  android:padding="5dp"
                  android:id="@+id/android_version"
                  android:layout_alignParentStart="true"
                  />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.5 INCH"
                android:textStyle="bold"
                android:id="@+id/screen_size"
                android:padding="5dp"
                android:layout_centerHorizontal="true"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="1920 X 1080"
                android:id="@+id/resolution"
                android:padding="5dp"
                android:layout_alignParentEnd="true"

                />


          </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XIAOMI"
            android:padding="5dp"
            android:id="@+id/brand_name"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redmi note 3"
            android:id="@+id/model_name"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_centerHorizontal="true"

            />

        <ImageView
            android:id="@+id/request_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_right_arrow2" />


    </RelativeLayout>





</LinearLayout>

</android.support.v7.widget.CardView>